export EDITOR="nvim"
export VISUAL="nvim"
export GOPATH="$HOME/.go"
export BUN_INSTALL="$HOME/.bun"

KEYTIMEOUT=1 #VI MODE TIMEOUT BULLSHIT OTHERWISE ITS SLOW AS BRICKS
VI_MODE_SET_CURSOR=true
VI_MODE_CURSOR_VISUAL=2
MODE_INDICATOR=""

alias grep="grep --color=auto"
alias vi="nvim"
alias vim="nvim"
alias aura="sudo"
alias hypr="exec uwsm start hyprland-uwsm.desktop"

source <(fzf --zsh)

bindkey -s '^f' '^u"tmux-sessionizer"\n'

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ ! -z "$2" ]] || [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

addToPathFront $HOME/.local/bin
addToPathFront $GOPATH/bin
addToPathFront $BUN_INSTALL/bin
